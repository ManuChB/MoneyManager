{
    "extends": [
        "tslint-react",
        "tslint-config-airbnb"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "no-arg": true,
        "no-bitwise": true,
        "no-consecutive-blank-lines": false,
        "no-string-literal": false,
        "no-trailing-whitespace": false,
        "no-use-before-declare": true,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords",
            "check-format"
        ],
        "no-console": [
            false
        ],
        "comment-format": [
            false
        ],
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "semicolon": [
            true,
            "always"
        ],
        "member-access": false,
        "no-empty": false,
        "indent": [true, "spaces", 4]
    }
}